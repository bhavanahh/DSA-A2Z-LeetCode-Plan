Subtract Product and Sum of Digits (LC 1281)

#include <stdio.h>

int subtractProductSum(int n) {
    int sum = 0, product = 1;

    while (n > 0) {
        int digit = n % 10;
        sum += digit;
        product *= digit;
        n /= 10;
    }

    return product - sum;
}

int main() {
    int n;
    printf("Enter a number: ");
    scanf("%d", &n);

    int result = subtractProductSum(n);
    printf("Result = %d\n", result);

    return 0;
}






